/* ============================================================================
   MOBILE DRAWER/HAMBURGER MENU
   ============================================================================ */

/* Hamburger button - only visible on portrait mobile */
.mobile-menu-button {
  display: none;
  position: fixed;
  top: 1rem;
  left: 1rem;
  z-index: 1002;
  width: 44px;
  height: 44px;
  background: var(--chakra-colors-gray-800);
  border: 2px solid var(--chakra-colors-gray-600);
  border-radius: 8px;
  cursor: pointer;
  padding: 0.5rem;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
}

@media (orientation: portrait) and (max-width: 768px) {
  .mobile-menu-button {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
  }
  
  .mobile-menu-button span {
    display: block;
    width: 24px;
    height: 3px;
    background: var(--chakra-colors-orange-400);
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  
  .mobile-menu-button.open span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  
  .mobile-menu-button.open span:nth-child(2) {
    opacity: 0;
  }
  
  .mobile-menu-button.open span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }
}

/* Floating action button container and buttons */
.mobile-fab-container {
  position: fixed;
  bottom: 1rem;
  right: 1rem;
  z-index: 999;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.mobile-fab {
  width: 56px;
  height: 56px;
  min-width: 56px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  cursor: pointer;
}

.mobile-fab:hover {
  transform: scale(1.05);
}

.mobile-fab:active {
  transform: scale(0.95);
}

/* Party modal styling */
.party-sidebar-modal {
  max-height: 70vh;
  overflow-y: auto;
}

/* Compact party bar - always visible on mobile */
.compact-party-bar {
  flex-shrink: 0;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
}

.compact-party-bar::-webkit-scrollbar {
  height: 4px;
}

.compact-party-bar::-webkit-scrollbar-track {
  background: var(--chakra-colors-gray-700);
  border-radius: 2px;
}

.compact-party-bar::-webkit-scrollbar-thumb {
  background: var(--chakra-colors-gray-600);
  border-radius: 2px;
}

.compact-party-bar::-webkit-scrollbar-thumb:hover {
  background: var(--chakra-colors-gray-500);
}

/* Hide FABs on desktop */
@media (min-width: 1024px) {
  .mobile-fab-container {
    display: none !important;
  }
}

/* Position FABs above action bar on small portrait */
@media (orientation: portrait) and (max-width: 480px) {
  .mobile-fab-container {
    bottom: 5.5rem;
    right: 0.5rem;
  }
  
  .mobile-fab {
    width: 48px;
    height: 48px;
    min-width: 48px;
  }
}

