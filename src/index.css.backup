/* Base item slot styles */
.item-slot {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-radius: 0.5rem;
  border-width: 2px;
  border-style: solid;
}

.item-slot--clickable {
  cursor: pointer;
}

.item-slot--icon-only {
  padding: 0;
}

.item-slot--with-padding {
  padding: 0.25rem;
}

/* Size variants */
.item-slot--sm {
  width: var(--item-slot-sm);
  height: var(--item-slot-sm);
}

.item-slot--md {
