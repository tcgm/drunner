/* ============================================================================
   ITEM DETAIL MODAL OPTIMIZED STYLES - Performance Critical
   ============================================================================ */

/* Modal decorative corners */
.item-detail-modal__corner {
  position: absolute;
  width: var(--corner-size);
  height: var(--corner-size);
  opacity: 0.3;
  pointer-events: none;
  z-index: 1;
  border-style: solid;
  border-width: 3px;
  border-color: transparent;
}

.item-detail-modal__corner--top-left {
  top: 0;
  left: 0;
}

.item-detail-modal__corner--top-right {
  top: 0;
  right: 0;
}

.item-detail-modal__corner--bottom-left {
  bottom: 0;
  left: 0;
}

.item-detail-modal__corner--bottom-right {
  bottom: 0;
  right: 0;
}

